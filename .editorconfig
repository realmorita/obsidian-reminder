# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.md]
# Preserve trailing spaces in Markdown for hard line breaks
trim_trailing_whitespace = false

[*.svelte]
indent_size = 2

[*.{ts,tsx,js,jsx,json,yml,yaml,css,scss,md,mjs,cjs}]
indent_size = 2